{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "ESNext",
		"allowJs": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"jsx": "react-jsx",

		"strict": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"noFallthroughCasesInSwitch": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"baseUrl": ".",

		"paths": {
			"@app/types/*": ["./packages/types/src/*"],
			"@app/shared/*": ["./packages/shared/src/*"],
			"@app/client/*": ["./packages/frontend/src/*"],
			"@app/server/*": ["./packages/backend/src/*"]
		}
	},
	"exclude": ["node_modules", "dist", ".jest-cache"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
