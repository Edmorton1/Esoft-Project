{
  "name": "app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "webpack --env mode=production",
    "lint": "npx eslint .",
    "start": "webpack serve --env mode=development port=5000",
    "start:railway": "npm run build && ts-node -r tsconfig-paths/register client.ts",
    "dev": "chcp 65001 && nodemon -r tsconfig-paths/register server/index.ts",
    "dev:railway": "ts-node server/index.ts",
    "typecheck": "tsc --noEmit",
    "watch": "npx tsc --noEmit --watch",
    "test:integra": "jest tests/integra --runInBand --detectOpenHandles",
    "test:unit": "chcp 65001 && jest tests/unit",
    "test:server": "chcp 65001 && jest server/tests"
  },
  "private": "true",
  "author": "",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "packages/client",
    "packages/server",
    "packages/shared",
    "packages/types"
  ]
}
